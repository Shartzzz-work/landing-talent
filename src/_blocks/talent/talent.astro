---
import { Image } from 'astro:assets';

import img1 from '../../_img/person1.png';
import img2 from '../../_img/person2.png';
import img3 from '../../_img/person3.png';
import img4 from '../../_img/person4.png';
---

<section id="talent">
  <div class="talent-container">
    <div class="talent-item">
      <h2>
        Talent that
        <strong class="text-accent">companies</strong>
        are looking for
      </h2>
      <div class="talent-buttons">
        <button
          type="button"
          name="sliderPrev"
          title="prev slider"
          class="slider-button"
        >
          <span class="arrow left"></span>
        </button>
        <button
          type="button"
          name="sliderNext"
          title="next slider"
          class="slider-button"
        >
          <span class="arrow right"></span>
        </button>
      </div>
    </div>
    <div class="talent-slider">
      <div class="talent-slider__item">
        <Image src={img1} densities={[1.5, 2]} alt="person image" />
        <h3>Jone Doe</h3>
        <span>UX Designer</span>
      </div>
      <div class="talent-slider__item">
        <Image src={img2} densities={[1.5, 2]} alt="person image" />
        <h3>Jone Doe</h3>
        <span>UX Designer</span>
      </div>
      <div class="talent-slider__item">
        <Image src={img3} densities={[1.5, 2]} alt="person image" />
        <h3>Jone Doe</h3>
        <span>UX Designer</span>
      </div>
      <div class="talent-slider__item">
        <Image src={img4} densities={[1.5, 2]} alt="person image" />
        <h3>Jone Doe</h3>
        <span>UX Designer</span>
      </div>
    </div>
  </div>
</section>
